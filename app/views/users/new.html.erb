<%= form_tag url_for(action: 'create'), method: "post" do %>

  <div class="form-group">
    <%= label_tag(:username)  %> <br />
    <%= text_field_tag :'username' %>
  </div>

  <div class="form-group">
    <%= label_tag 'Email' %> <br />
    <%= text_field_tag :'email' %>
  </div>

  <div class="form-group">
    <%= label_tag 'Bio' %> <br />
    <%= text_field_tag :'bio' %>
  </div>

  <div class="form-group">  
    <%= submit_tag "Create User", class: "btn btn-default" %>
  </div>

<% end %>

