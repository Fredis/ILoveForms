             <%= label_tag 'Email:' %>
                 <%= text_field_tag 'email', '', placeholder: 'Your email...', class: "form-control", id: "formGroupExampleInput2" %>
                 <br /><br />
             <%= label_tag 'Bio:' %>
                 <%= text_field_tag 'bio', '', placeholder: 'Your bio...', class: "form-control", id: "formGroupExampleInput2" %>
